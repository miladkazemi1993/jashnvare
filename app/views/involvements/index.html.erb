<p id="notice"><%= notice %></p>

<h1>Listing Involvements</h1>

<table>
  <thead>
    <tr>
      <th>Program</th>
      <th>Work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @involvements.each do |involvement| %>
      <tr>
        <td><%= involvement.program_id %></td>
        <td><%= involvement.work_id %></td>
        <td><%= link_to 'Show', involvement %></td>
        <td><%= link_to 'Edit', edit_involvement_path(involvement) %></td>
        <td><%= link_to 'Destroy', involvement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

