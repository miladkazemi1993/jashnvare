<body id="page4" >

    <div class="bg">
        <section id="content">
            <div class="main" style="background-image: url(/assets/gray2.jpg);background-repeat: no-repeat; background-size:auto 100%;">
                <div class="zerogrid">
                    <div class="wrapper p4">
                        <article class="col-full">
                            <h3 class="p2" style="margin-top:5%;margin-right:6%;"> برنامه های ما</h3>
                         <% @programs.each do |program| %>
                            <div class="row wrap-col" style="margin-bottom: 50px;">
                                <div class="col-2-3 extra-wrap">
                                    <div class="wrapper">
                                        <h4 class="fleft" style="margin-left:540px;"> <%= program.name %></h4>
                                        <ul class="list-services fright indent-top">
                                            <li><a href="#"></a></li>
                                            <li><a class="item-2" href="#"></a></li>
