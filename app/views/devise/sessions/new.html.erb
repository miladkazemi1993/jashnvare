<section class="login">
	<div class="titulo">ورود</div>
	<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= f.email_field :email, :placeholder => "نام کاربری" ,style: 'background-color:#141414 ; border: 1px solid #0b0b0b;'%>
          <%= f.password_field :password , :placeholder =>"رمز عبور" , style: 'width:100% ; height:45px'%>
        <div style="float: left">
          <% if devise_mapping.rememberable? -%>
		        <div><%= f.check_box :remember_me , label_class: "remember_me_class" %></div>
		      <% end -%>
        </div>
        <div class="olvido">
        <%= render "devise/shared/links" %>
        </div>
        	<button type="submit" class="btn btn-danger" style="width:40%; margin-right: 30%;">ورود</button>
      <%end%>
</section>